@import 'nib'

.property
	& > div
		position relative

.property-name
	backface-visibility hidden
	bottom 30px
	color #FFF
	font-size	2.5rem
	left 20px
	position absolute
	text-shadow 1px 1px 2px rgba(0, 0, 0, 0.8)
	z-index	2

	p
		font-size 1.6rem
		margin 0

#slides
	display none
	position relative
	z-index 0

.slidesjs-navigation,
.slidesjs-pagination
	display none

@media screen and (min-width: 600px)
	.slidesjs-navigation
		background rgba(0, 0, 0, 0.6)
		border-radius 0 4px 4px 0
		bottom 50%
		color #FFF
		display block
		left 0
		padding 5px 10px
		position absolute
		text-decoration none
		z-index 10
	.slidesjs-next
		border-radius 4px 0 0 4px
		left auto
		right 0