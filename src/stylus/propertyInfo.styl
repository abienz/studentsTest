@import 'nib'

.property-info
	margin 30px 0
	position relative
	
	a
		background #00ACF0
		border 1px solid #3f95e0
		border-radius 6px
		box-sizing border-box
		color #FFF
		display block
		font-size 1.4rem
		font-weight bold
		padding 10px
		text-align center
		text-decoration none

.room
	opacity 0
	position absolute
	transition opacity 0.5s ease

.selected
	opacity 1
	transition opacity 0.5s ease 0.5s

.rating,
.rooms
	margin 20px 0
	
	&:before
		display inline-block
		font 2rem IcoMoon
		margin 0 10px 0 0
		vertical-align text-bottom

.rating:before
	content "\e9d9"
.rooms:before
	content "\e900"
	
@media screen and (min-width: 600px)
	.property-info
		min-height 115px
		
	.rating,
	.rooms,
	.property-info a
		margin 0
		position absolute
		right 0
		width 280px
	
	.ratings
		top 0
	.rooms
		top 40px

	.description
		margin 20px 300px 20px 0